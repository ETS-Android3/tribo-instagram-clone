<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".About">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"/>

    <View
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0b0b0b"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tribo"
        android:textSize="50dp"
        android:fontFamily="@font/kanit_regular"
        android:layout_marginTop="180dp"
        android:layout_marginStart="145dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Product of Infyss It Consulting Services"
        android:layout_below="@+id/name"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginStart="60dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/info"
        android:layout_below="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff7c17"
        android:layout_marginTop="70dp"
        android:layout_marginStart="140dp"
        android:text="Reach us at :"/>

    <LinearLayout
        android:id="@+id/web"
        android:layout_below="@+id/info"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domain   :"
            android:layout_marginStart="80dp"
            android:textSize="18dp"
            android:textColor="#fff"/>

    <TextView
        android:id="@+id/domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:fontFamily="@font/kanit_regular"
        android:maxLines="5"
        android:layout_marginStart="20dp"
        android:text="infyss.com"
        android:textColor="@color/splashOrange"
        android:textColorLink="#fff"
        android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/web"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email       :"
            android:layout_marginStart="80dp"
            android:textSize="18dp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_regular"
            android:maxLines="5"
            android:autoLink="email"
            android:text="info@infyss.com"
            android:layout_marginStart="20dp"
            android:textColor="@color/splashOrange"
            android:textColorLink="#fff"
            android:textSize="20dp" />

    </LinearLayout>




</RelativeLayout>